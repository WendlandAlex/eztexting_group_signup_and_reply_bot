from Classes import Contact, Group, Message

def _strftime_unix(timestamp: datetime.datetime):
    timetuple = timestamp.timetuple()
    return time.mktime(timetuple)

def send_message():
    pass

def receive_message():
    pass

def scheduled_send_message(message_client: Message, datetime_object):
    message_client.StampToSend = _strftime_unix(datetime_object)
    
    return message_client.send_message()